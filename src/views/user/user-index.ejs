<div class="d-flex flex-column h-100 mx-4" >
  <div class="my-2">
    <p class="fs-3">Users</p>
  </div>
  <div class="table-responsive mb-2" style="flex: 100%">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% for (const user of users) { %>
          <tr>
            <td><%- user._id %></td>
            <td><%- user.name %></td>
            <td><%- user.email %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="my-2"> 
    <a href="/users/create" class="btn btn-lg btn-outline-primary">Criar</a>
  </div>
</div>